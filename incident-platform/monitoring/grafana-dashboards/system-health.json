{
  "uid": "system-health",
  "title": "System Health",
  "tags": ["incident-platform", "health", "system"],
  "timezone": "browser",
  "refresh": "10s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "title": "Alert Ingestion",
      "type": "stat",
      "gridPos": { "h": 4, "w": 5, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "up{job=\"alert-ingestion\"}",
          "legendFormat": "Status",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "mappings": [
            { "type": "value", "options": { "1": { "text": "UP", "color": "green" }, "0": { "text": "DOWN", "color": "red" } } }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "green", "value": 1 }
            ]
          },
          "color": { "mode": "thresholds" }
        }
      },
      "options": { "colorMode": "background", "graphMode": "none", "textMode": "auto", "reduceOptions": { "calcs": ["lastNotNull"] } },
      "datasource": { "type": "prometheus", "uid": "prometheus" }
    },
    {
      "id": 2,
      "title": "Incident Management",
      "type": "stat",
      "gridPos": { "h": 4, "w": 5, "x": 5, "y": 0 },
      "targets": [
        {
          "expr": "up{job=\"incident-management\"}",
          "legendFormat": "Status",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "mappings": [
            { "type": "value", "options": { "1": { "text": "UP", "color": "green" }, "0": { "text": "DOWN", "color": "red" } } }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "green", "value": 1 }
            ]
          },
          "color": { "mode": "thresholds" }
        }
      },
      "options": { "colorMode": "background", "graphMode": "none", "textMode": "auto", "reduceOptions": { "calcs": ["lastNotNull"] } },
      "datasource": { "type": "prometheus", "uid": "prometheus" }
    },
    {
      "id": 3,
      "title": "On-Call Service",
      "type": "stat",
      "gridPos": { "h": 4, "w": 5, "x": 10, "y": 0 },
      "targets": [
        {
          "expr": "up{job=\"oncall-service\"}",
          "legendFormat": "Status",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "mappings": [
            { "type": "value", "options": { "1": { "text": "UP", "color": "green" }, "0": { "text": "DOWN", "color": "red" } } }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "green", "value": 1 }
            ]
          },
          "color": { "mode": "thresholds" }
        }
      },
      "options": { "colorMode": "background", "graphMode": "none", "textMode": "auto", "reduceOptions": { "calcs": ["lastNotNull"] } },
      "datasource": { "type": "prometheus", "uid": "prometheus" }
    },
    {
      "id": 4,
      "title": "Notification Service",
      "type": "stat",
      "gridPos": { "h": 4, "w": 5, "x": 15, "y": 0 },
      "targets": [
        {
          "expr": "up{job=\"notification-service\"}",
          "legendFormat": "Status",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "mappings": [
            { "type": "value", "options": { "1": { "text": "UP", "color": "green" }, "0": { "text": "DOWN", "color": "red" } } }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "green", "value": 1 }
            ]
          },
          "color": { "mode": "thresholds" }
        }
      },
      "options": { "colorMode": "background", "graphMode": "none", "textMode": "auto", "reduceOptions": { "calcs": ["lastNotNull"] } },
      "datasource": { "type": "prometheus", "uid": "prometheus" }
    },
    {
      "id": 5,
      "title": "Web UI",
      "type": "stat",
      "gridPos": { "h": 4, "w": 4, "x": 20, "y": 0 },
      "targets": [
        {
          "expr": "up{job=\"web-ui\"}",
          "legendFormat": "Status",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "mappings": [
            { "type": "value", "options": { "1": { "text": "UP", "color": "green" }, "0": { "text": "DOWN", "color": "red" } } }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "green", "value": 1 }
            ]
          },
          "color": { "mode": "thresholds" }
        }
      },
      "options": { "colorMode": "background", "graphMode": "none", "textMode": "auto", "reduceOptions": { "calcs": ["lastNotNull"] } },
      "datasource": { "type": "prometheus", "uid": "prometheus" }
    },
    {
      "id": 6,
      "title": "Overall Service Availability",
      "type": "gauge",
      "gridPos": { "h": 6, "w": 8, "x": 0, "y": 4 },
      "targets": [
        {
          "expr": "sum(up) / count(up) * 100",
          "legendFormat": "Availability %",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "orange", "value": 50 },
              { "color": "yellow", "value": 80 },
              { "color": "green", "value": 100 }
            ]
          },
          "color": { "mode": "thresholds" }
        }
      },
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] }, "showThresholdLabels": false, "showThresholdMarkers": true },
      "datasource": { "type": "prometheus", "uid": "prometheus" }
    },
    {
      "id": 7,
      "title": "Request Rate by Service",
      "type": "timeseries",
      "gridPos": { "h": 6, "w": 8, "x": 8, "y": 4 },
      "targets": [
        {
          "expr": "sum(rate(oncall_requests_total[5m])) by (endpoint)",
          "legendFormat": "On-Call: {{endpoint}}",
          "refId": "A"
        },
        {
          "expr": "rate(scrape_samples_scraped{job=\"alert-ingestion\"}[5m])",
          "legendFormat": "Alert Ingestion",
          "refId": "B"
        },
        {
          "expr": "rate(scrape_samples_scraped{job=\"incident-management\"}[5m])",
          "legendFormat": "Incident Management",
          "refId": "C"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 15,
            "pointSize": 5,
            "lineWidth": 2
          },
          "unit": "reqps"
        }
      },
      "options": { "legend": { "displayMode": "table", "placement": "bottom" }, "tooltip": { "mode": "multi" } },
      "datasource": { "type": "prometheus", "uid": "prometheus" }
    },
    {
      "id": 8,
      "title": "Scrape Duration by Target",
      "type": "timeseries",
      "gridPos": { "h": 6, "w": 8, "x": 16, "y": 4 },
      "targets": [
        {
          "expr": "scrape_duration_seconds",
          "legendFormat": "{{job}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 10,
            "lineWidth": 2
          },
          "unit": "s"
        }
      },
      "options": { "legend": { "displayMode": "table", "placement": "bottom" }, "tooltip": { "mode": "multi" } },
      "datasource": { "type": "prometheus", "uid": "prometheus" }
    },
    {
      "id": 9,
      "title": "Service Targets Overview",
      "type": "table",
      "gridPos": { "h": 6, "w": 24, "x": 0, "y": 10 },
      "targets": [
        {
          "expr": "up",
          "legendFormat": "{{job}}",
          "refId": "A",
          "format": "table",
          "instant": true
        }
      ],
      "fieldConfig": {
        "defaults": {},
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "Value" },
            "properties": [
              { "id": "mappings", "value": [{ "type": "value", "options": { "1": { "text": "UP ✅", "color": "green" }, "0": { "text": "DOWN ❌", "color": "red" } } }] },
              { "id": "custom.align", "value": "center" }
            ]
          }
        ]
      },
      "transformations": [
        { "id": "organize", "options": { "excludeByName": { "Time": true, "__name__": true }, "renameByName": { "instance": "Endpoint", "job": "Service", "Value": "Status" } } }
      ],
      "datasource": { "type": "prometheus", "uid": "prometheus" }
    }
  ],
  "templating": { "list": [] },
  "annotations": { "list": [] },
  "schemaVersion": 39,
  "version": 1
}
